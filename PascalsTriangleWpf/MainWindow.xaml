<Window x:Class="PascalsTriangleWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PascalsTriangleWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RichTextBox x:Name="richTB" HorizontalAlignment="Stretch" Height="200" VerticalAlignment="Top" FontSize="30">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Content="Сделать красиво" HorizontalAlignment="Left" Margin="486,205,0,0" VerticalAlignment="Top" Width="306" Height="80"  FontSize="30" Click="Button_Click"/>

    </Grid>
</Window>
